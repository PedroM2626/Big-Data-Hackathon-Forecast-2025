# Configuration for the Big Data Hackathon Forecast 2025 project

# Data paths
DATA_DIR=./data
RAW_DATA_DIR=${DATA_DIR}/raw
PROCESSED_DATA_DIR=${DATA_DIR}/processed

# Model configuration
MODEL_DIR=./models
MODEL_TYPE=xgb  # Options: xgb, rf
TARGET_COL=sales_quantity
TEST_SIZE=0.2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pipeline.log

# Feature engineering configuration
DATE_COL=date
PDV_COL=pdv_id
SKU_COL=sku_id
QUANTITY_COL=sales_quantity

# Model hyperparameters (example for XGBoost)
XGB_N_ESTIMATORS=100
XGB_LEARNING_RATE=0.1
XGB_MAX_DEPTH=6
XGB_RANDOM_STATE=42

